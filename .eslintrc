{
  "env": {
    "browser": true,
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "curly": 2,
    "indent": [
      2,
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-inline-comments": 1,
    "no-trailing-spaces": 2,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "id-blacklist": [
      2,
      "data",
      "err",
      "e",
      "cb",
      "callback",
      "item",
      "items"
    ],
    "func-style": [
      2,
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "sort-keys": 2,
    "space-in-parens": [
      2,
      "never"
    ],
    "space-before-blocks": 2,
    "sort-vars": 2,
    "sort-imports": 2,
    "quote-props": [
      2,
      "consistent-as-needed"
    ],
    "prefer-object-spread": 2,
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "camelcase": 2,
    "no-unneeded-ternary": 2,
    "no-prototype-builtins" : 0,
    "no-async-promise-executor": 1
  }
}
